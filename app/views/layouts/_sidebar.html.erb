<div class="fixed-sidebar">
  <div class="fixed-sidebar-left sidebar--small" id="sidebar-left">

    <%= link_to "#", class: "logo" do %>
      <div class="img-wrap">
        <img src="<%= asset_path("logo.png") %>" alt="Olympus">
      </div>
    <% end %>

    <div class="mCustomScrollbar" data-mcs-theme="dark">
      <ul class="left-menu">
        <li>
          <%= link_to "#", class: "js-sidebar-open" do %>
            <svg class="olymp-menu-icon left-menu-icon"  data-toggle="tooltip" data-placement="right"   data-original-title="<%= t (".open_menu") %>"><use xlink:href="<%= asset_path("sprites/icons.svg#olymp-menu-icon") %>"></use></svg>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <svg class="olymp-newsfeed-icon left-menu-icon" data-toggle="tooltip" data-placement="right"   data-original-title="<%= t (".new_feed") %>"><use xlink:href="<%= asset_path("sprites/icons.svg#olymp-newsfeed-icon") %>"></use></svg>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <svg class="olymp-happy-faces-icon left-menu-icon"  data-toggle="tooltip" data-placement="right"   data-original-title="<%= t (".groups") %>"><use xlink:href="<%= asset_path("sprites/icons.svg#olymp-happy-faces-icon") %>"></use></svg>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <svg class="olymp-badge-icon left-menu-icon"  data-toggle="tooltip" data-placement="right"   data-original-title="<%= t (".community_badges") %>"><use xlink:href="<%= asset_path("sprites/icons.svg#olymp-badge-icon") %>"></use></svg>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <svg class="olymp-stats-icon left-menu-icon"  data-toggle="tooltip" data-placement="right"   data-original-title="<%= t (".account_stats") %>"><use xlink:href="<%= asset_path("sprites/icons.svg#olymp-stats-icon") %>"></use></svg>
          <% end %>
        </li>
      </ul>
    </div>
  </div>

  <div class="fixed-sidebar-left sidebar--large" id="sidebar-left-1">
    <%= link_to "#", class: "logo" do %>
      <div class="img-wrap">
        <img src="<%= asset_path("logo.png") %>" alt="Olympus">
      </div>
      <div class="title-block">
        <h6 class="logo-title">olympus</h6>
      </div>
    <% end %>

    <div class="mCustomScrollbar" data-mcs-theme="dark">
      <ul class="left-menu">
        <li>
          <%= link_to "#", class: "js-sidebar-open" do %>
            <svg class="olymp-close-icon left-menu-icon"><use xlink:href="<%= asset_path("sprites/icons.svg#olymp-close-icon") %>"></use></svg>
            <span class="left-menu-title"><%= t ".collapse_menu" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to signup_path do %>
            <svg class="olymp-newsfeed-icon left-menu-icon" data-toggle="tooltip" data-placement="right"   data-original-title="<%= t ".new_feed" %>"><use xlink:href="<%= asset_path("sprites/icons.svg#olymp-newsfeed-icon") %>"></use></svg>
            <span class="left-menu-title"><%= t ".new_feed" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <svg class="olymp-happy-faces-icon left-menu-icon"  data-toggle="tooltip" data-placement="right"   data-original-title="<%= t ".groups" %>"><use xlink:href="<%= asset_path("sprites/icons.svg#olymp-happy-faces-icon") %>"></use></svg>
            <span class="left-menu-title"><%= t ".groups" %></span>
          <% end %>
        </li>

        <li>
          <%= link_to "#" do %>
            <svg class="olymp-badge-icon left-menu-icon"  data-toggle="tooltip" data-placement="right"   data-original-title="<%= t ".community_badges" %>"><use xlink:href="<%= asset_path("sprites/icons.svg#olymp-badge-icon") %>"></use></svg>
            <span class="left-menu-title"><%= t ".community_badges" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <svg class="olymp-stats-icon left-menu-icon"  data-toggle="tooltip" data-placement="right"   data-original-title="<%= t ".account_stats" %>"><use xlink:href="<%= asset_path("sprites/icons.svg#olymp-stats-icon") %>"></use></svg>
            <span class="left-menu-title"><%= t ".account_stats" %></span>
          <% end %>
        </li>
      </ul>

      <div class="profile-completion">

        <div class="skills-item">
          <div class="skills-item-info">
            <span class="skills-item-title"><%= t ".profile_completion" %></span>
            <span class="skills-item-count"><span class="count-animate" data-speed="1000" data-refresh-interval="50" data-to="76" data-from="0"></span><span class="units">76%</span></span>
          </div>
          <div class="skills-item-meter">
            <span class="skills-item-meter-active bg-primary" style="width: 76%"></span>
          </div>
        </div>

        <span><%= t ".complete_profile" %></span>

      </div>
    </div>
  </div>
</div>
